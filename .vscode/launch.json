{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "initialize dust3r",
            "type": "debugpy",
            "request": "launch",
            "module": "instantsplat.initialize",
            "console": "integratedTerminal",
            "args": [
                "-d",
                "data/sora/santorini/3_views",
                "--with_depth",
            ]
        },
        {
            "name": "initialize mast3r",
            "type": "debugpy",
            "request": "launch",
            "module": "instantsplat.initialize",
            "console": "integratedTerminal",
            "args": [
                "-d",
                "data/sora/santorini/3_views",
                "-i",
                "mast3r",
                "-o",
                "resize=1024",
                "--with_depth",
            ]
        },
        {
            "name": "initialize dust3r align to colmap",
            "type": "debugpy",
            "request": "launch",
            "module": "instantsplat.initialize",
            "console": "integratedTerminal",
            "args": [
                "-d",
                "data/sora/santorini/3_views",
                "--initializer",
                "colmap-dense-dust3r",
                "-o",
                "colmap_executable='./data/colmap/COLMAP.bat'",
                "--with_depth",
            ]
        },
        {
            "name": "initialize colmap-dense",
            "type": "debugpy",
            "request": "launch",
            "module": "instantsplat.initialize",
            "console": "integratedTerminal",
            "args": [
                "-d",
                "data/sora/santorini/3_views",
                "--initializer",
                "colmap-dense",
                "-o",
                "colmap_executable='./data/colmap/COLMAP.bat'",
                "--with_depth",
            ]
        },
        {
            "name": "initialize colmap-sparse",
            "type": "debugpy",
            "request": "launch",
            "module": "instantsplat.initialize",
            "console": "integratedTerminal",
            "args": [
                "-d",
                "data/sora/santorini/3_views",
                "--initializer",
                "colmap-sparse",
                "-o",
                "colmap_executable='./data/colmap/COLMAP.bat'",
                "--with_depth"
            ]
        },
        {
            "name": "initialize colmap-sparse load camera",
            "type": "debugpy",
            "request": "launch",
            "module": "instantsplat.initialize",
            "console": "integratedTerminal",
            "args": [
                "-d",
                "data/sora/santorini/3_views",
                "--initializer",
                "colmap-sparse",
                "-o",
                "colmap_executable='./data/colmap/COLMAP.bat'",
                "-o",
                "load_camera='./data/sora/santorini/3_views/cameras'",
                "--with_depth",
            ]
        },
        {
            "name": "initialize and train",
            "type": "debugpy",
            "request": "launch",
            "module": "instantsplat.train",
            "console": "integratedTerminal",
            "args": [
                "-s",
                "data/sora/santorini/3_views",
                "-d",
                "output/sora/santorini/3_views",
                "-i",
                "1000",
                "--init",
